<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>
  <packageSourceMapping>
    <clear />
    <packageSource key="nuget.org">
      <!-- allow everything; or replace with specific patterns if you prefer -->
      <package pattern="*" />
      <!-- optional: narrow explicit allow -->
      <package pattern="Microsoft.NETFramework.ReferenceAssemblies.*" />
      <package pattern="System.Threading.Tasks.Extensions" />
    </packageSource>
  </packageSourceMapping>
</configuration>
