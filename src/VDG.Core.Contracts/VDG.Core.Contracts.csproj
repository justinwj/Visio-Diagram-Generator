<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!-- Contracts used by .NET 8 tools AND the .NET 4.8 runner -->
    <TargetFrameworks>net8.0;netstandard2.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <!-- Polyfill 'record' support for the legacy target -->
  <ItemGroup Condition="'$(TargetFramework)'=='netstandard2.0'">
    <Compile Include="CompilerServices.IsExternalInit.cs" />
  </ItemGroup>
</Project>
