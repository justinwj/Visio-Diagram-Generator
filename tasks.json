{
  "version": "2.0.0",
  "tasks": [
    {
      "label": ".NET Restore (sln)",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "restore",
        "Visio-Diagram-Generator.sln"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": ".NET Build (Debug)",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "Visio-Diagram-Generator.sln",
        "-c",
        "Debug",
        "/nologo"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        ".NET Restore (sln)"
      ]
    },
    {
      "label": ".NET Test",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "test",
        "Visio-Diagram-Generator.sln",
        "-c",
        "Debug",
        "--no-build"
      ],
      "problemMatcher": "$msCompile",
      "group": "test"
    },
    {
      "label": ".NET Clean",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "clean",
        "Visio-Diagram-Generator.sln"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}